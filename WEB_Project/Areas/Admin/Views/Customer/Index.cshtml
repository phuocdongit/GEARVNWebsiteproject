@*Content Header (Page header)*@
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3>Quản lý khách hàng</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div>
</section>

@*Main content*@
<section class="content">

    @*Default box*@
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">DANH SÁCH KHÁCH HÀNG</h3>

      
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm("Index", "Customer", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("Searchtext", null, new { @class = "form-control", @placeholder = "Hãy nhập Họ tên hoặc SĐT khách hàng cần tìm" })

                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
                            </span>
                        </div>
                    }
                </div>
                <div class="col-6" style="text-align:right;">
                    <div>@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>
                    
                </div>

                <style>
                    .title-column {
                        white-space: nowrap; /* Ngăn cột bị ngắt dòng */
                        overflow: hidden; /* Ẩn phần vượt quá kích thước */
                        text-overflow: ellipsis; /* Thêm dấu "..." */
                        max-width: 250px; /* Điều chỉnh chiều rộng tối đa của cột */
                    }

                    .center-text {
                        text-align: center; /* Căn giữa văn bản trong cột */
                    }
                </style>

            </div>
            <br />
            <table class="table table-hover" width="1000px">
                <thead style="border:1px solid">
                    <tr>


                        <th style="text-align: center; width:50px">STT</th>
                        <th style="text-align: center; width:80px">Mã KH</th>
                        <th style="width:180px; text-align:center">Họ tên</th>
                        <th style="text-align: left; width: 100px">SĐT</th>
                        <th style="text-align:center">Địa chỉ</th>
                        <th style="text-align: center; width: 150px">Email</th>
                        <th style="width:120px;">Chỉnh sửa</th>



                    </tr>
                </thead>
                <tbody class="table table-bordered">
                    @if (Model != null && Model.Any())
                    {

                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {

                            <tr id="trow_@item.CustomerID">

                                <td class="center-text stt-column">@i</td>
                                <td>@item.CustomerID</td>
                                <td>@item.CustomerName</td>
                                <td>@item.Phone</td>
                                <td class="title-column">@item.Address</td>
                                <td>@item.Email</td>

                                <td>
                                    <a href="/admin/customer/viewcustomer/@item.CustomerID" class="btn btn-sm btn-success btnXem">Xem</a>
                                    <a href="/admin/customer/delete/@item.CustomerID" class="btn btn-sm btn-danger" data-id="@item.CustomerID">Xóa</a>
                                </td>

                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            
                            <td colspan="7">Không có bản ghi nào!!!</td>
                        </tr>
                    }
                </tbody>
            </table>

           

        </div>
        @*//.card-body*@
        <div class="card-footer">

        </div>
        @*/.card-footer*@
    </div>
    @*/.card*@

</section>
@*/.content*@




@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnXem', function () {
                var id = $(this).data("CustomerID");
                $('#txtCustomerId').val(id);
                $('#modal-default').modal('show');
            });
            $('body').on('click', '#BtnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        var _id = $(this).val();
                        if (i === 0) {
                            ;
                        } else {
                            str += "," + _id;
                        }
                        i++;
                    } else {
                        checkbox.attr('selected', '');
                    }
                });
                if (str.length > 0) {
                    var conf = confirm('Bạn có muốn xóa các bản ghi này hay không?');
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/provider/deleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });

            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                    } else {
                        checkbox.attr('selected', '');
                    }
                });
            });



        });
    </script>
}