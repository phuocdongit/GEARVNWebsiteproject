@model WEB_Project.Models.EF.Provider

@{
    ViewBag.Title = "Delelte";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/provider" class="nav-link">Nhà cung cấp</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Xóa</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">Nhà cung cấp</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Vui lòng kiểm tra lại thông tin trước khi xóa !</h3>
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <div class="bs-stepper-content">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width:15%">Mã NCC</th>
                                <th style="width:30%">Tên Nhà cung cấp</th>
                                <th style="width:15%">Số điện thoại</th>
                                <th style="width:40%">Địa chỉ</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.ProID) </td>
                                <td>@Html.DisplayFor(model => model.ProName) </td>
                                <td>@Html.DisplayFor(model => model.Phone) </td>
                                <td>@Html.DisplayFor(model => model.Address) </td>
                            </tr>
                        </tbody>
                    </table>

                    @using (Html.BeginForm("Delete", "Provider", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.ProID)
                        <strong>Bạn chắc chăc muốn xóa chứ?</strong>
                        <div class="form-group">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a href="/admin/provider" class="btn btn-secondary">Quay lại</a>
                            
                        </div>
                    }
                </div>
            }
            else
            {
                <h1>Không có gì </h1>
            }
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->
@section scripts{
    <!-- Add your scripts here if needed -->
}