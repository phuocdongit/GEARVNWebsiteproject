 @*Content Header (Page header)*@
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3>Danh sách Nhà cung cấp</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div> 
</section>

 @*Main content*@
<section class="content">

    @*Default box*@
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/provider/create" class="btn btn-primary">Thêm mới</a>
              
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm("Index", "Provider", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("Searchtext", null, new { @class = "form-control", @placeholder = "Nhập tên hoặc số điện thoại nhà cung cấp" })
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
                            </span>
                        </div>
                    }
                </div>
                
                  
                    <div class="col-6" style="text-align:right;">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                
                </div>
              
                <style>
                    .title-column {
                        white-space: nowrap; /* Ngăn cột bị ngắt dòng */
                        overflow: hidden; /* Ẩn phần vượt quá kích thước */
                        text-overflow: ellipsis; /* Thêm dấu "..." */
                        max-width: 400px; /* Điều chỉnh chiều rộng tối đa của cột */
                    }

                    .center-text {
                        text-align: center; /* Căn giữa văn bản trong cột */
                    }
                </style>

            </div>
            <table class="table table-hover" width="1000px">
                <thead>
                    <tr>
                        <th class="center-text">STT</th>
                        <th>Mã NCC</th>
                        <th>Tên nhà cung cấp</th>
                        <th>Số điện thoại</th>
                        <th>Địa chỉ</th>
                        <th>Chỉnh sửa</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {

                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {

                            <tr id="trow_@item.ProID">
                         
                                <td class="center-text stt-column">@i</td>
                                <td>@item.ProID</td>
                                <td>@item.ProName</td>
                                <td>@item.Phone</td>
                                <td>@item.Address</td>

                                <td>
                                    <a href="/admin/provider/edit/@item.ProID" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="/admin/provider/delete/@item.ProID" @*data-id="@item.ProID"*@ class="btn btn-sm btn-danger @*btnDelete*@">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td></td>
                            <td colspan="6">Không có bản ghi nào!!!</td>
                        </tr>
                    }
                </tbody>
            </table>

          

        </div>
        @*//.card-body*@
        <div class="card-footer">

        </div>
        @*/.card-footer*@
    </div>
    @*/.card*@

</section>
