@model WEB_Project.Models.EF.Provider

@{
    ViewBag.Title = "Thêm mới Nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/provider" class="nav-link">Nhà cung cấp</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}



<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">Nhà cung cấp</li>
                </ol>
            </div>
        </div>
    </div> 
</section>


<section class="content">


    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Nhập thông tin Nhà cung cấp </h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Create", "Provider", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Mã NCC</label>
                            @Html.TextBoxFor(x => x.ProID, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ProID, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Tên Nhà cung cấp</label>
                            @Html.TextBoxFor(x => x.ProName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ProName, null, new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Số điện thoại</label>
                            @Html.TextAreaFor(x => x.Phone, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Địa chỉ</label>
                            @Html.TextAreaFor(x => x.Address, new { @class = "form-control" })
                        </div>
                        <div class="form-group">

                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <a href="/admin/provider" class="btn btn-danger">Quay lại</a>
                        </div>
                    </div>

                }

            </div>
        </div>
        <div class="card-footer">

        </div>
    </div>

</section>

@section  scripts{
    <script>
