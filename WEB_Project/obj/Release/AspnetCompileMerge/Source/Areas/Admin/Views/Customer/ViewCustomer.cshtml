@model WEB_Project.Models.EF.Customer

@{
    ViewBag.Title = "ViewCustomer";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Default box -->
<div class="card">
    <div class="card-header">
        <h3 @*class="card-title"*@>Thông tin khách hàng</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Mã KH </label>
                    <p class="form-control">@Model.CustomerID</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Họ tên</label>
                    <p class="form-control">@Model.CustomerName</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>SĐT</label>
                    <p class="form-control">@Model.Phone</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <p class="form-control">@Model.Address</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email</label>
                    <p class="form-control">@Model.Email</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Số lượng đơn hàng</label>
                    <p class="form-control">@ViewBag.NumberOfInvoices</p>
                </div>
            </div>
        </div>
        <div class="form-group col-md-6">
            <a href="/admin/customer" class="btn btn-danger">Quay lại</a>
        </div>

    </div>
    <!-- /.card-body -->
    <div class="card-footer">

    </div>
    <!-- /.card-footer-->
</div>

