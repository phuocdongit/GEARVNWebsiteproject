@section scripts{
    <script src="~/Content/clients/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Content/assets/plugins/moment/moment.min.js"></script>
    <script>

        function formatNumberWithCommas(number) {
            return number.toLocaleString('vi-VN');
        }

        $(function () {

            /* ChartJS
             * -------
             * Here we will create a few charts using ChartJS
             */

            var arrDoanhThu = [];
            var arrLoiNhuan = [];
            var arrDate = [];
            // Lấy ngày bắt đầu là 30 ngày trước ngày hiện tại
            var fromDate = moment().subtract(30, 'days').format('DD/MM/yyyy');

            $.ajax({
                url: '/Thongke/GetStatistical',
                type: 'GET',
                /*  data: { fromDate: '', toDate: '' },*/
                data: { fromDate: fromDate, toDate: '' },
                success: function (rs) {

                    $.each(rs.Data, function (i, item) {
                        var strDate = moment(item.Date).format('DD/MM/yyyy');
                        arrDate.push(strDate);
                        arrDoanhThu.push(item.DoanhThu);
                        arrLoiNhuan.push(item.LoiNhuan);
                    });
                    var areaChartData = {
                        labels: arrDate,
                        datasets: [
                            {
                                label: 'Lợi nhuận',
                                backgroundColor: 'rgba(255, 67, 0, 0.9)',
                                borderColor: 'rgba(255, 67, 0, 0.9)',
                                pointRadius: false,
                                pointColor: '#3b8bba',
                                pointStrokeColor: 'rgba(255, 67, 0, 0.9)',
                                pointHighlightFill: '#fff',
                                pointHighlightStroke: 'rgba(255, 67, 0, 0.9)',
                                data: arrLoiNhuan
                            },
                            {
                                label: 'Danh thu',
                                backgroundColor: 'rgba(95, 187, 255, 0.9)',
                                borderColor: 'rgba(95, 187, 255, 0.9)',
                                pointRadius: false,
                                pointColor: 'rgba(95, 187, 255, 0.9)',
                                pointStrokeColor: '#c1c7d1',
                                pointHighlightFill: '#fff',
                                pointHighlightStroke: 'rgba(220,220,220,1)',
                                data: arrDoanhThu
                            },
                        ]
                    }
                    //-------------
                    //- BAR CHART -
                    //-------------
                    var barChartCanvas = $('#barChart').get(0).getContext('2d')
                    var barChartData = $.extend(true, {}, areaChartData)
                    var temp0 = areaChartData.datasets[0]
                    var temp1 = areaChartData.datasets[1]
                    barChartData.datasets[0] = temp1
                    barChartData.datasets[1] = temp0

                    var barChartOptions = {
                        responsive: true,
                        maintainAspectRatio: false,
                        datasetFill: false
                    }

                    new Chart(barChartCanvas, {
                        type: 'bar',
                        data: barChartData,
                        options: barChartOptions
                    });
                    load_data(rs.Data);
                }
            });


        })



        function load_data(data) {
            var strHtml = "";
            $.each(data, function (i, item) {
                var strDate = moment(item.Date).format('DD/MM/yyyy');
                var formattedDoanhThu = formatNumberWithCommas(item.DoanhThu);
                var formattedLoiNhuan = formatNumberWithCommas(item.LoiNhuan);
                strHtml += "<tr>";
                strHtml += "<td>" + (i + 1) + "</td>";
                strHtml += "<td>" + strDate + "</td>";
                strHtml += "<td>" + formattedDoanhThu + "</td>";
                strHtml += "<td>" + formattedLoiNhuan + "</td>";
                strHtml += "</tr>";

            });
            $('#load_data').html(strHtml);
        }

    </script>
}

