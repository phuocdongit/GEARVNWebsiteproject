@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
    <script>
        function OnFailure(rs) {
            if (!rs.Success) {
                $('#show_success').html("Bạn mua hàng thất bại! Xin vui lòng thử lại");
            }
        }

        $(document).ready(function () {
            $('#myForm').validate({
                rules: {
                    //'CustomerID': {
                    //    required: true
                    //},
                    'CustomerName': {
                        required: true
                    },
                    'Phone': {
                        required: true
                    },
                    'Address': {
                        required: true
                    },
                    'Email': {
                        required: true,
                        email: true
                    }
                },
                messages: {
                    'CustomerName': 'Vui lòng nhập họ tên',
                    'Phone': 'Vui lòng nhập số điện thoại',
                    'Address': 'Vui lòng nhập địa chỉ nhận hàng',
                    'Email': 'Email chưa hợp lệ'
                }
            });
        });
    </script>
