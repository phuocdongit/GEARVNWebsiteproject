@model WEB_Project.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Profile";

}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<h2>Profile</h2>
<style>
    .profile-col {
        background-color: #e0e0e0;
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 10px;
    }

        .profile-col h3 {
            color: #333;
        }

    .profile-menu-item {
        text-decoration: none;
        color: #333;
        padding: 8px;
        display: block;
        border-radius: 4px;
        transition: background-color 0.3s, color 0.3s;
    }

        .profile-menu-item:hover {
            background-color: #ff6347;
            color: #fff;
        }
</style>
<div class="card-body">

    <div class="sidebar" style="margin-top:150px">
        <div class="row">
            <div class="col-md-3 profile-col">
                @*<h3>Tài khoản @Model.UserName</h3>*@
                <div class="left-sidebar" style="background: #ffffff; border-radius: 4px; padding: 10px;">
                    <ul class="profile-menu">
                        <li><a href="#" class="profile-menu-item">Thông tin khách hàng</a></li>
                        <li><a href=" javascript:document.getElementById('logOffForm').submit()" class="profile-menu-item">Đăng xuất</a></li>
                    </ul>
                    @if (Request.IsAuthenticated)
                    {
                        <div style="display:none">
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @id = "logOffForm" }))
                            {
                                @Html.AntiForgeryToken()}
                        </div>}
                </div>
            </div>
            <div class="col-md-9">
                <h4>Thông tin khách hàng</h4>
                <div class="left-sidebar" style="background: #ffffff; border-radius: 4px; padding: 10px">
                    @using (Html.BeginForm("UpProfile", "Account"))
                    {
                        @Html.ValidationSummary(false)
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Họ tên</label>
                            <input type="text" class="form-control" name="FullName" value="@Model.FullName" />
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="text" class="form-control" name="Phone" value="@Model.Phone" />
                        </div>
                        <div class="form-group">
                            <label>Tài khoản</label>
                            <input type="text" class="form-control" name="UserName" value="@Model.UserName" readonly />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="Email" value="@Model.Email"  readonly/>
                        </div>
                        <div class="form-group">
                           
                            <button type="submit" class="btn btn-default">Cập nhật</button>
                        </div>
                    }

                </div>
            </div>
        </div>

    </div>
</div>
